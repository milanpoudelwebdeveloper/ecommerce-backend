{
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["unused-imports"],
  "extends": ["eslint:recommended"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
